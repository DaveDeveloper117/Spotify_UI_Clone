        <item name="colorSurfaceInverse">@color/md_theme_dark_inverseSurface</item>
        <item name="colorPrimaryInverse">@color/md_theme_dark_inversePrimary</item>
        <!--Display-->
        <item name="textAppearanceDisplayLarge">@style/TextAppearance.SpotifyUIClone.DisplayLarge</item>
        <item name="textAppearanceDisplayMedium">@style/TextAppearance.SpotifyUIClone.DisplayMedium</item>
        <item name="textAppearanceDisplaySmall">@style/TextAppearance.SpotifyUIClone.DisplaySmall</item>
