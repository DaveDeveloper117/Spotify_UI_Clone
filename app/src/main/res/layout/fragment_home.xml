<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home.content.Home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="horizontal"
            android:paddingTop="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:text="Recently played"
                android:textAppearance="?attr/textAppearanceBodyLarge" />

            <Button
                style="?attr/materialIconButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                app:icon="@drawable/outline_notifications_none_24"
                app:iconTint="@color/white" />

            <Button
                style="?attr/materialIconButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                app:icon="@drawable/round_history_24"
                app:iconTint="@color/white" />

            <Button
                style="?attr/materialIconButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                app:icon="@drawable/outline_settings_24"
                app:iconTint="@color/white" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="100dp"
                android:orientation="vertical">

                <HorizontalScrollView
                    android:scrollbarSize="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="vertical">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_margin="10dp"
                                android:checkable="true"
                                android:clickable="true"
                                android:focusable="true"
                                app:cardCornerRadius="0dp">
                                <!-- Media -->
                                <ImageView
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:contentDescription="@string/content_description_media"
                                    android:scaleType="fitCenter"
                                    app:srcCompat="@drawable/recent_1" />
                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:text="1(Remastered)"
                                android:textAlignment="center"
                                android:textAppearance="?attr/textAppearanceBodySmall"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="vertical">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:clickable="true"
                                android:focusable="true"
                                android:checkable="true"
                                app:cardCornerRadius="100dp"
                                android:layout_margin="10dp">
                                <!-- Media -->
                                <ImageView
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    app:srcCompat="@drawable/lana_bebe"
                                    android:scaleType="fitCenter"
                                    android:contentDescription="@string/content_description_media"
                                    />
                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:text="Lana Del Rey"
                                android:maxLines="1"
                                android:textStyle="bold"
                                android:textAppearance="?attr/textAppearanceBodySmall"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="vertical">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:clickable="true"
                                android:focusable="true"
                                android:checkable="true"
                                app:cardCornerRadius="100dp"
                                android:layout_margin="10dp">
                                <!-- Media -->
                                <ImageView
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    app:srcCompat="@drawable/recent_3"
                                    android:scaleType="fitCenter"
                                    android:contentDescription="@string/content_description_media"
                                    />
                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:text="Marvin Gaye"
                                android:maxLines="1"
                                android:textStyle="bold"
                                android:textAppearance="?attr/textAppearanceBodySmall"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="vertical">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_margin="10dp"
                                android:checkable="true"
                                android:clickable="true"
                                android:focusable="true"
                                app:cardCornerRadius="0dp">
                                <!-- Media -->
                                <ImageView
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:contentDescription="@string/content_description_media"
                                    android:scaleType="fitCenter"
                                    app:srcCompat="@drawable/recent_4" />
                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:text="Indie Pop"
                                android:textAlignment="center"
                                android:textAppearance="?attr/textAppearanceBodySmall"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                </HorizontalScrollView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_margin="10dp"
                            android:checkable="true"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardCornerRadius="16dp">
                            <!-- Media -->
                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:contentDescription="@string/content_description_media"
                                android:scaleType="fitCenter"
                                app:srcCompat="@drawable/wrap_mini" />
                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_columnWeight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceLabelSmall"
                            android:text="#SPOTIFYWRAPPED"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceTitleLarge"
                            android:text="Your 2021 in review"/>

                    </LinearLayout>

                </LinearLayout>

                <HorizontalScrollView
                    android:scrollbarSize="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="vertical">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="130dp"
                                android:layout_height="130dp"
                                android:layout_margin="10dp"
                                android:checkable="true"
                                android:clickable="true"
                                android:focusable="true"
                                app:cardCornerRadius="0dp">
                                <!-- Media -->
                                <ImageView
                                    android:layout_width="130dp"
                                    android:layout_height="130dp"
                                    android:contentDescription="@string/content_description_media"
                                    android:scaleType="fitCenter"
                                    app:srcCompat="@drawable/wrap" />
                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:text="Your Top Songs 2021"
                                android:paddingStart="10dp"
                                android:textAlignment="textStart"
                                android:textAppearance="?attr/textAppearanceBodySmall"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="vertical">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="130dp"
                                android:layout_height="130dp"
                                android:layout_margin="10dp"
                                android:checkable="true"
                                android:clickable="true"
                                android:focusable="true"
                                app:cardCornerRadius="0dp">
                                <!-- Media-->
                                <ImageView
                                    android:layout_width="130dp"
                                    android:layout_height="130dp"
                                    android:contentDescription="@string/content_description_media"
                                    android:scaleType="fitCenter"
                                    app:srcCompat="@drawable/revealed" />
                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:text="Your Artists Revealed"
                                android:paddingStart="10dp"
                                android:textAlignment="textStart"
                                android:textAppearance="?attr/textAppearanceBodySmall"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                </HorizontalScrollView>

                <HorizontalScrollView
                    android:scrollbarSize="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="16dp"
                            android:textAppearance="?attr/textAppearanceTitleLarge"
                            android:text="Editor's picks"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="130dp"
                                    android:layout_height="130dp"
                                    android:layout_margin="10dp"
                                    android:checkable="true"
                                    android:clickable="true"
                                    android:focusable="true"
                                    app:cardCornerRadius="0dp">
                                    <!-- Media -->
                                    <ImageView
                                        android:layout_width="130dp"
                                        android:layout_height="130dp"
                                        android:contentDescription="@string/content_description_media"
                                        android:scaleType="fitCenter"
                                        app:srcCompat="@drawable/pick_1" />
                                </com.google.android.material.card.MaterialCardView>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Ed Sheeran, Big Sean,\nJuice WRLD, Post Malone"
                                    android:textAlignment="center"
                                    android:textAppearance="?attr/textAppearanceLabelSmall"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:orientation="vertical">

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="130dp"
                                    android:layout_height="130dp"
                                    android:layout_margin="10dp"
                                    android:checkable="true"
                                    android:clickable="true"
                                    android:focusable="true"
                                    app:cardCornerRadius="0dp">
                                    <!-- Media-->
                                    <ImageView
                                        android:layout_width="130dp"
                                        android:layout_height="130dp"
                                        android:contentDescription="@string/content_description_media"
                                        android:scaleType="fitCenter"
                                        app:srcCompat="@drawable/pick_2" />
                                </com.google.android.material.card.MaterialCardView>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Mitski, Tame Impala,\nGlass Animals, Charli XCX"
                                    android:textAlignment="center"
                                    android:textAppearance="?attr/textAppearanceLabelSmall"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:orientation="vertical">

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="130dp"
                                    android:layout_height="130dp"
                                    android:layout_margin="10dp"
                                    android:checkable="true"
                                    android:clickable="true"
                                    android:focusable="true"
                                    app:cardCornerRadius="0dp">
                                    <!-- Media-->
                                    <ImageView
                                        android:layout_width="130dp"
                                        android:layout_height="130dp"
                                        android:contentDescription="@string/content_description_media"
                                        android:scaleType="fitCenter"
                                        app:srcCompat="@drawable/pick_3" />
                                </com.google.android.material.card.MaterialCardView>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:maxLines="1"
                                    android:text="Today's Top Hits"
                                    android:textAlignment="center"
                                    android:textAppearance="?attr/textAppearanceLabelSmall"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </HorizontalScrollView>

                <HorizontalScrollView
                    android:scrollbarSize="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="16dp"
                            android:textAppearance="?attr/textAppearanceTitleLarge"
                            android:text="Your top mixes"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="130dp"
                                    android:layout_height="130dp"
                                    android:layout_margin="10dp"
                                    android:checkable="true"
                                    android:clickable="true"
                                    android:focusable="true"
                                    app:cardCornerRadius="0dp">
                                    <!-- Media -->
                                    <ImageView
                                        android:layout_width="130dp"
                                        android:layout_height="130dp"
                                        android:contentDescription="@string/content_description_media"
                                        android:scaleType="fitCenter"
                                        app:srcCompat="@drawable/pick_1" />
                                </com.google.android.material.card.MaterialCardView>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Ed Sheeran, Big Sean,\nJuice WRLD, Post Malone"
                                    android:textAlignment="center"
                                    android:textAppearance="?attr/textAppearanceLabelSmall"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:orientation="vertical">

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="130dp"
                                    android:layout_height="130dp"
                                    android:layout_margin="10dp"
                                    android:checkable="true"
                                    android:clickable="true"
                                    android:focusable="true"
                                    app:cardCornerRadius="0dp">
                                    <!-- Media-->
                                    <ImageView
                                        android:layout_width="130dp"
                                        android:layout_height="130dp"
                                        android:contentDescription="@string/content_description_media"
                                        android:scaleType="fitCenter"
                                        app:srcCompat="@drawable/pick_2" />
                                </com.google.android.material.card.MaterialCardView>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Mitski, Tame Impala,\nGlass Animals, Charli XCX"
                                    android:textAlignment="center"
                                    android:textAppearance="?attr/textAppearanceLabelSmall"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:orientation="vertical">

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="130dp"
                                    android:layout_height="130dp"
                                    android:layout_margin="10dp"
                                    android:checkable="true"
                                    android:clickable="true"
                                    android:focusable="true"
                                    app:cardCornerRadius="0dp">
                                    <!-- Media-->
                                    <ImageView
                                        android:layout_width="130dp"
                                        android:layout_height="130dp"
                                        android:contentDescription="@string/content_description_media"
                                        android:scaleType="fitCenter"
                                        app:srcCompat="@drawable/pick_3" />
                                </com.google.android.material.card.MaterialCardView>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:maxLines="1"
                                    android:text="Today's Top Hits"
                                    android:textAlignment="center"
                                    android:textAppearance="?attr/textAppearanceLabelSmall"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </HorizontalScrollView>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</FrameLayout>
